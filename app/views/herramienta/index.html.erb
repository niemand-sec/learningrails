<h1>Listing herramienta</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herramienta.each do |herramientum| %>
      <tr>
        <td><%= herramientum.nombre %></td>
        <td><%= herramientum.descripcion %></td>
        <td><%= link_to 'Show', herramientum %></td>
        <td><%= link_to 'Edit', edit_herramientum_path(herramientum) %></td>
        <td><%= link_to 'Destroy', herramientum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

